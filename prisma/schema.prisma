// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Modelo Tenant/Gimnasio
model Gym {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  phone     String?
  address   String?
  logo      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relaciones
  users     GymUser[]
  members   Member[]
  plans     Plan[]

  @@map("gyms")
}

// Modelo Usuario (propietario/admin del gimnasio)
model GymUser {
  id            String     @id @default(cuid())
  email         String
  name          String
  password      String
  role          UserRole   @default(OWNER)
  emailVerified DateTime?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  // Relación multi-tenant
  gymId String
  gym   Gym    @relation(fields: [gymId], references: [id], onDelete: Cascade)

  sessions Session[]

  @@unique([gymId, email])
  @@map("gym_users")
}

enum UserRole {
  OWNER
  ADMIN
  STAFF
}

// Modelo Miembro (usuario del gimnasio)
model Member {
  id               String        @id @default(cuid())
  firstName        String
  lastName         String
  email            String?
  phone            String?
  dateOfBirth      DateTime?
  gender           Gender?
  emergencyContact String?
  emergencyPhone   String?
  notes            String?
  status           MemberStatus  @default(ACTIVE)
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt

  // Relación multi-tenant
  gymId String
  gym   Gym   @relation(fields: [gymId], references: [id], onDelete: Cascade)

  // Suscripciones/planes activos
  subscriptions Subscription[]

  @@map("members")
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum MemberStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
  CANCELLED
}

// Modelo Plan de membresía
model Plan {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Decimal  @db.Decimal(10, 2)
  duration    Int      // Días de duración
  maxUsers    Int?     // Límite de usuarios para el gimnasio
  features    Json?    // Características del plan
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relación multi-tenant
  gymId String
  gym   Gym    @relation(fields: [gymId], references: [id], onDelete: Cascade)

  subscriptions Subscription[]

  @@map("plans")
}

// Modelo Suscripción (membresía activa del miembro)
model Subscription {
  id            String             @id @default(cuid())
  startDate     DateTime           @default(now())
  endDate       DateTime
  status        SubscriptionStatus @default(ACTIVE)
  paymentStatus PaymentStatus      @default(PENDING)
  notes         String?
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt

  // Relaciones
  memberId String
  member   Member @relation(fields: [memberId], references: [id], onDelete: Cascade)

  planId String
  plan   Plan   @relation(fields: [planId], references: [id])

  @@map("subscriptions")
}

enum SubscriptionStatus {
  ACTIVE
  EXPIRED
  CANCELLED
  PAUSED
}

enum PaymentStatus {
  PENDING
  PAID
  OVERDUE
  CANCELLED
}

// Modelo Session para NextAuth
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         GymUser  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// Modelo VerificationToken para NextAuth
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}
